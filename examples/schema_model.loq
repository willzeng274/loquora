// ! = required, ? = nullable, ?! = nullable and optional
schema User {
    id: Int!;           // Required integer
    name: String?;      // Nullable string
    email: String?!;    // Nullable and optional string
};

struct Account {
    user: User!;        // Required User field
    balance: Int;       // Simple integer field
};

model PremiumUser(User) {
    status = "gold";    // Default field value
    tier = 1;          // Premium tier
};

print("Schema and model definitions loaded");
