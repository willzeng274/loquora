// ! = required, ? = nullable, ?! = nullable and optional

struct Person {
    id: Int!,
    name: String?,
    age: Int!,
    email: String?!,
}

struct Address {
    street: String,
    city: String,
    zip_code: String,
    person: Person!,
}

john = Person {
    id: 1,
    name: "John Doe",
    age: 30,
    email: "john@example.com"
};

address = Address {
    street: "123 Main St",
    city: "Anytown",
    zip_code: "12345",
    person: john
};

print("John", john);

print("Address", address);

john.age = 31;
print("Age updated");
print(john.age);
print(john);

// right now we pass by val
print("Still the same addr:", address);
